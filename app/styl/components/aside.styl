.aside
    flex()
    flex-direction: column;
    justify-content: space-between;
    z-index 1
    transition_ease()
    &__block
        background $color_white
    &--show
        transform: translateY(0)
.title
    position relative
    &__main
        background $color_green
        height 355px
        padding: 0 80px 0 36px
        line-height: 80px
    &__plus
        position relative
        top 7px
    &__triangle
        position: absolute;
        bottom: -1px;
        width: 100%;
        height: 100px;
.menu
    flex()
    flex-direction: column
    &__item
        margin: 71.5px 0
        text-align: center
        md(margin, 45px 0)
        &:last-child
            margin-bottom: 93px

.contacts
    padding: 22.5px 0
    text-align: center
