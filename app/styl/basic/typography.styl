html
    font $default_size_text 'Roboto'
h1
    font-size: 66px
    text-transform: uppercase
    font-weight: bold
    mlg(font-size, 3rem)
    lg(font-size, 2.5rem)
    md(font-size, 2rem)

a
    text-decoration: none
format__text($size, $space)
    font-size: $size
    letter-spacing: $space
.title
    &__main
        color $color_white
    &__plus
        font-size: 1.4em
.menu__item
    font-size: 24px
    font-weight: 300
    letter-spacing: -0.5px;
    md(font-size, 1rem)
.item-menu
    &__href
        color $color_black
.contacts
    background: $color_brown
    color: $color_white
    &__content
        font-size: 35px
        font-weight: bold
        md(font-size, 1.5rem)
.slide
    color: $color_white
    &__title
        format__text(47px, 0.5px)
        font-weight: 100
        mlg(font-size, 2.5rem)
        md(font-size, 2rem)
        xs(font-size, 1.4rem)
.registration
    font-weight: 100
    &__date
        format__text(47px, 0.5px)
        font-weight: 100
        mlg(font-size, 2.5rem)
        md(font-size, 2rem)
        xs(font-size, 1.4rem)
    &__tax
        font-style: italic
        format__text(14px, -0.3px)
    &__more
        font-size: 13px
        color: $color_white
.speakers
    &__title
        format__text(27px, -1.6px)
        font-weight: 700;
        md(font-size, 2rem)
    &__name
        format__text(23px, 0.4px)
        mlg(font-size, 1.1rem)
    &__position
        position relative
        color: $color_green
        margin-top: 13px
        mlg(font-size, 0.8rem)
        &:before
            content: ''
            width 38px
            height 3px
            position absolute
            top -9px
            background: $color_green
.become-speakers
    text-align: center
    &__title
        format__text(35px, 0.1px)
        font-weight: bold
        mlg(font-size, 1.3rem)